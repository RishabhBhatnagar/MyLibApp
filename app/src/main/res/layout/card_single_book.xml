<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:clickable="true"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="10dp"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:background="@drawable/selector_row">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5sp"
            android:textStyle="bold"


            android:textColor="#ed044e"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_nested"
            android:layout_below="@id/name"
            android:padding="@dimen/cardview_default_elevation"
            android:layout_margin="5sp"
            card_view:cardCornerRadius="5sp"
            card_view:cardElevation="5sp"
            android:background="#8e8c8c">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8e8c8c">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/relative_1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/due_date_tv"
                        android:text="DUE DATE"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/sub_heads_size"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:id="@+id/days_left"
                        android:gravity="center"
                        android:textColor="#ed044e"
                        android:textSize="46dp"
                        android:text="2"
                        android:padding="1dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape2"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/renew_count_tv"
                        android:text="@string/counter_text"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/sub_heads_size"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/rel_lay_margin"
                    android:layout_below="@id/relative_1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/due_date"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textSize="@dimen/data_size"
                        android:textColor="#ffff"
                        android:text="12/02/15"
                        android:textStyle="bold"
                        />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/re_issue_counter"
                        android:textSize="@dimen/data_size"
                        android:layout_centerInParent="true"
                        android:textColor="#ffff"
                        android:text="02"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/data_size"
                        android:layout_alignParentEnd="true"
                        android:textColor="#ffff"
                        android:text="DAYS LEFT"
                        android:textStyle="bold"

                        />



                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_nested">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RE-ISSUE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/reissue_checkbox"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FINE AMT :"
                android:id="@+id/fine_amt_tv"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="2.3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 18"
                android:layout_marginLeft="300dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="2.3dp"
                android:id="@+id/fine_amt"
                />
        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>